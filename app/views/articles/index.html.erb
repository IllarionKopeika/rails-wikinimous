<% @articles.each do |article| %>
<div class="container">
  <div class="justify-content-center row">
    <div class="col-sm-8 col-sm-offset-2 link-secondary">
      <article>
        <h2><%= link_to article.title, article_path(article) %></h2>
        <p><%= article.content %></p>
      </article>
    </div>
  </div>
</div>
<% end %>
